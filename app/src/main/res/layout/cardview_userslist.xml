<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/softBlue"
    app:cardCornerRadius="30dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profilePicInUserList"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/profileimage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/profilePicInUserList"
            android:layout_toEndOf="@id/profilePicInUserList"
            android:paddingLeft="20dp"
            android:text="Akhil Agrawal"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:ellipsize="end"
            android:textColor="@color/blue"
            android:id="@+id/userNameInUserList"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>